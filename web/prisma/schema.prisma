generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id    String @id @default(cuid())
  title String

  description String  @default("")
  isDone      Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
